<header class="Page-header">
  <div class="navbar navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-target=".Page-navs" data-toggle="collapse">
          <span class="sr-only">切换导航</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">F.E.S.</a>
      </div>
      <!-- 导航 -->
      <nav class="Page-navs navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="/">首页</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>
<main class="Page-content">
  <div class="container">
    <article class="Page-main Article">
      <header class="Article-header">
        <h1><%= config.title %></h1>
        <% if ( config.description ) { %>
          <p><%= config.description %></p>
        <% } %>
      </header>
      <div class="Article-content col-md-9">
        <% _.forEach(site.data.abilities, function( cat, k ) { %>
          <h2 id="<%= k %>"><%= cat.name %></h2>
          <% if ( cat.description ) { %>
            <%- cat.description %>
          <% } %>
          <% cat.items.forEach(function( sc ) { %>
            <h3 id="<%= sc.slug || sc.name %>"><%= sc.name %></h3>
            <% if ( sc.description ) { %>
              <%- sc.description %>
            <% } %>
            <% if ( sc.items ) { %>
              <% sc.items.forEach(function( k ) { %>
                <h4><%= k.name %></h4>
                <% if ( k.description ) { %>
                  <%- k.description %>
                <% } %>
              <% }) %>
            <% } %>
          <% }) %>
        <% }) %>
      </div>
      <footer class="Article-footer col-md-3">
        <section class="Widget Widget--toc">
          <header class="Widget-header">
            <h2 class="Widget-title">目录</h2>
          </header>
          <div class="Widget-body"></div>
        </section>
      </footer>
    </article>
  </div>
</main>
<footer class="Page-footer Footer">
  <div class="container">
    <!-- 网站版权 -->
