<article>
  <header>
    <h1><%= config.title %></h1>
    <% if ( config.description ) { %>
      <p><%= config.description %></p>
    <% } %>
  </header>
  <% _.forEach(site.data.abilities, function( cat, k ) { %>
    <h2 id="<%= k %>"><%= cat.name %></h2>
    <% if ( cat.description ) { %>
      <%- cat.description %>
    <% } %>
    <% cat.items.forEach(function( sc ) { %>
      <h3 id="<%= sc.slug || sc.name %>"><%= sc.name %></h3>
      <% if ( sc.description ) { %>
        <%- sc.description %>
      <% } %>
      <% if ( sc.items ) { %>
        <% sc.items.forEach(function( k ) { %>
          <h4><%= k.name %></h4>
          <% if ( k.description ) { %>
            <%- k.description %>
          <% } %>
        <% }) %>
      <% } %>
    <% }) %>
  <% }) %>
  <footer>
    <%- partial("_widgets/toc", {contents: site.data.abilities}) %>
  </footer>
</article>
